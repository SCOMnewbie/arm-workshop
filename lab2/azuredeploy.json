{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webAppName": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string",
            "defaultValue": "fanfapp"
        },
        "hostingEnvironment": {
            "type": "string",
            "defaultValue": ""
        },
        "location": {
            "type": "string",
            "defaultValue": "West Europe",
            "allowedValues": [
                "West Europe",
                "East US"
            ]
        },
        "sku": {
            "type": "string",
            "defaultValue": "Free",
            "allowedValues": [
                "Free"
            ]
        },
        "skuCode": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
                "F1"
            ]
        },
        "workerSize": {
            "type": "string",
            "defaultValue": "0"
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "feeca1cc-da9e-403a-86e6-cd4ba7a63f3e"
        }
    },
    "variables": {
        "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', variables('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
        "FullhostingPlanName": "[concat(parameters('hostingPlanName'), '-plan')]",
        "serverFarmResourceGroup": "[resourceGroup().name]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2016-03-01",
            "name": "[parameters('webAppName')]",
            "properties": {
                "name": "[parameters('webAppName')]",
                "siteConfig": {
                    "appSettings": []
                },
                "serverFarmId": "[variables('serverFarmId')]",
                "hostingEnvironment": "[parameters('hostingEnvironment')]"
            },
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', variables('FullhostingPlanName') )]"
            ]
        },
        {
            "apiVersion": "2016-09-01",
            "name": "[variables('FullhostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[variables('FullhostingPlanName')]",
                "workerSizeId": "[parameters('workerSize')]",
                "numberOfWorkers": "1",
                "hostingEnvironment": "[parameters('hostingEnvironment')]"
            },
            "sku": {
                "Tier": "[parameters('sku')]",
                "Name": "[parameters('skuCode')]"
            }
        }
    ]
}